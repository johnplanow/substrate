{
  "name": "substrate",
  "version": "0.1.0",
  "description": "Substrate â€” multi-agent orchestration daemon for AI coding agents",
  "type": "module",
  "license": "MIT",
  "author": "AI Dev Toolkit Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/jplanow/ai-dev-toolkit-new.git"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "ai",
    "agents",
    "orchestration",
    "cli",
    "task-graph",
    "routing"
  ],
  "bin": {
    "substrate": "./dist/cli/index.js"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.json",
    "dist/cli/templates",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "postbuild": "cp -r src/cli/templates dist/cli/templates",
    "dev": "tsx watch src/cli/index.ts",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.6.2",
    "commander": "^12.1.0",
    "js-yaml": "^4.1.1",
    "pino": "^9.6.0",
    "semver": "^7.6.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.0",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.17.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "tsdown": "^0.9.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.18.0",
    "vitest": "^2.1.8"
  }
}
